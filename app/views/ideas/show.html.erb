<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-9">
    <%= image_tag(@idea.picture_url, width: '100%') if @idea.picture.present? %>
  </div>

  <div class="col-md-3">
    <p><b>Name: </b><%= @idea.name %></p>
    <p><b>Description: </b><%= @idea.description %></p>
    <p>
      <%= link_to 'Edit', edit_idea_path(@idea), class: "btn btn-sm btn-info" %>
      <%= link_to 'Delete', @idea, class: "btn btn-sm btn-danger", data: { confirm: '削除してもよろしいですか？' }, method: :delete %>
      <%= link_to 'Back', ideas_path, class: "btn btn-sm btn-light" %>
    </p>
  </div>
</div>

<h3>Comments</h3>

<%= render 'comments/form', comment: @comment %>

<% @comments.each do |comment| %>
  <div>
    <strong><%= comment.user_name %></strong>
    <br />
    <p><%= comment.body %></p>
    <p><%= link_to 'Delete', comment_path(comment), class: "btn btn-sm btn-outline-danger", method: :delete, data: { confirm: '削除してもよろしいですか？' } %></p>
  </div>
<% end %>
