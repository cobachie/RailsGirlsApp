<p id="notice"><%= notice %></p>

<h1>Listing ideas</h1>

<div data-controller="idea">
  <% @ideas.in_groups_of(3) do |group| %>
    <div class="row">
      <% group.compact.each do |idea| %>
        <div class="col-md-4">
          <%= image_tag idea.picture, width: '100%' if idea.picture.attached? %>
          <h4><%= link_to idea.name, idea %></h4>
          <%= link_to "#", class: "btn btn-link", data: { action: "click->idea#like", id: idea.id }, remote: true do %>
            Like (<span id="idea-<%= idea.id %>-likes"><%= idea.likes_count %></span>)
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>


<br>

<div>
  <%= link_to 'New Idea', new_idea_path, class: "btn btn-info" %>
</div>
